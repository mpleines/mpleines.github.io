---
interface Props {
	title: string;
	href: string;
  linkColor: 'red' | 'blue' | 'yellow' | 'green';
}

const { href, title, linkColor = 'green' } = Astro.props;
const currentPath = Astro.url.pathname;
---
<a href={href} class={currentPath === href ? 'active' : 'link'} aria-current={currentPath === href ? 'page' : undefined}>
  <h2>
    {title}
  </h2>
</a>

<style define:vars={{ linkColor: linkColor === 'red' ? 'var(--red)' : linkColor === 'blue' ? 'var(--blue)' : linkColor === 'yellow' ? 'var(--yellow)' : 'var(--green)'}}>
	.active {
    color: inherit;
    text-decoration-color: var(--linkColor);
    text-decoration-thickness: 2.5px;
  }

  .link {
    color: inherit;
    text-decoration: none;
  }

  .link:hover {
    text-decoration: underline;
    text-decoration-thickness: 2.5px;
    text-decoration-color: var(--linkColor);
  }

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
</style>
